import rateLimit from 'express-rate-limit';

// 投票频率限制（24小时5次）
export const voteLimiter = rateLimit({
  windowMs: 24 * 60 * 60 * 1000, // 24小时
  max: 5,
  keyGenerator: (req) => {
    return req.headers['x-user-tag'] || req.ip;
  },
  handler: (req, res) => {
    res.status(429).json({
      error: "今日投票次数已达上限",
      resetTime: req.rateLimit.resetTime
    });
  }
});